<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.my_workout_app">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/dumbell"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dumbell"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_Workout_app"
        android:screenOrientation="portrait">
        <activity
            android:name=".RestActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DoWorkoutActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ManageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlaningActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>